services:
  wordpress:
    image: {{ wordpress_image }}
    env_file:
      - .env
    depends_on:
      - db
    networks:
      - backend

  db:
    image: {{ mysql_image }}
    env_file:
    - .env
    networks:
      - backend

  phpmyadmin:
    image: {{ phpmyadmin_image }}
    env_file:
    - .env
    depends_on:
      - db
    networks:
      - backend

  nginx:
    image: {{ nginx_image }}
    ports:
      - "443:443"
      - "80:80"
    volumes:
      - "{{ wordpress_site_dir }}/certs:/etc/nginx/certs:ro"
      - "{{ wordpress_site_dir }}/nginx.conf:/etc/nginx/nginx.conf:ro"
    depends_on:
      - wordpress
      - phpmyadmin

    networks:
      - backend

networks:
  backend:
    driver: bridge
